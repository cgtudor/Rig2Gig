<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gangoffive.rig2gig">

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VenueActivity"></activity>
        <activity android:name=".MyBandActivity" />
        <activity android:name=".CreateBandActivity"></activity>
        <activity android:name=".BandListingDetailsActivity" />
        <activity android:name=".MusicianListingDetailsActivity" />
        <activity android:name=".VenueListingDetailsActivity" />
        <activity
            android:name=".CreateBandAdvertisement"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".CreateMusicianAdvertisement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PerformerAdvertisementEditor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MusicianDetailsEditor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VenueAdvertisementEditor"
            android:theme="@style/AppTheme.NoActionBar" />
